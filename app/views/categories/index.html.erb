    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to ('Ver Categoria' '<span class="glyphicon glyphicon-hand-up"></span>').html_safe, category, id: "ver", :class => "btn btn-primary" %></td>
