<p id="notice"><%= notice %></p>

<h1> <%=t '.Listing Categories'%> </h1>

<table>
  <thead>
    <tr>
      <th> <%=t '.Name'%> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Ver Categoria', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <!--<td><%= link_to t('Destroy'), category, method: :delete, data: { confirm: t('Are you sure?') } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

