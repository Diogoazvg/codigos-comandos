<p id="notice"><%= notice %></p>

<h1> <%=t '.Listing Categories'%> </h1>

<table>
  <thead>
    <tr>
      <th> <%=t '.Name'%> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to ('Ver Comando' '<span class="glyphicon glyphicon-hand-up"></span>').html_safe, category, id: "ver", :class => "btn btn-primary" %></td>
        <td><%= link_to ('Editar' '<span class="glyphicon glyphicon-hand-up"></span>').html_safe, edit_category_path(category), id: "ver", :class => "btn btn-primary" %></td>

        <!--<td><%= link_to t('Destroy'), category, method: :delete, data: { confirm: t('Are you sure?') } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @categories %>
