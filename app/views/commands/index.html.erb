<p id="notice"><%= notice %></p>

<h1> <%=t '.Listing Commands'%> </h1>

<table>
  <thead>
    <tr>
      <th><%=t '.Name'%></th>
      <th><%=t '.Category'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commands.each do |command| %>
      <tr>
        <td><%= command.name %></td>
        <td><%= command.category.name %></td>
        <td><%= link_to t('Show'), command %></td>
        <td><%= link_to t('Edit'), edit_command_path(command) %></td>
        <td><%= link_to t('Destroy'), command, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

