<% if user_signed_in? %>
  <%= simple_form_for(@command) do |f| %>
    <%= f.error_notification %>
    <div class="panel panel-primary">
      <div class="panel-heading">Criar novo comando</div>
      <div class="panel-body">
        <div class="form-inputs" aria-describedby="sizing-addon1">
          <%= f.input :name %>
          <%= f.input :command %>
          <%= f.input :description %>
          <%= f.association :category %>
